@model Nostalgame.Models.LoginViewModel 

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label class="small mb-1" for="UserName">Nome utente</label>
                            <input class="form-control py-4" id="UserName" name="UserName" type="text" placeholder="Inserisci il nome utente" required />
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="Password">Password</label>
                            <input class="form-control py-4" id="Password" name="Password" type="password" placeholder="Inserisci la password" required />
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
