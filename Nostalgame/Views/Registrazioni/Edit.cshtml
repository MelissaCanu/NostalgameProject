@model Nostalgame.Models.RegistrazioneEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica</h1>

<h4>Registrazione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRegistrazione" />
            <div class="form-group">
                <label asp-for="IdAbbonamento" class="control-label"></label>
                <select asp-for="IdAbbonamento" class="form-control" asp-items="ViewBag.IdAbbonamento"></select>
                <span asp-validation-for="IdAbbonamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@Model.IdRegistrazione">Indietro</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
