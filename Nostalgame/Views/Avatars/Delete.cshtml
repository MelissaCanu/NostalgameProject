@model Nostalgame.Models.Avatar

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Avatar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Genere</dt>
        <dd class="col-sm-10">@Model.Genere.Nome</dd>

        <dt class="col-sm-2">Foto</dt>
        <dd class="col-sm-10"><img src="@Model.Foto" alt="@Model.Nome" width="100" height="100" /></dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IdAvatar" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
