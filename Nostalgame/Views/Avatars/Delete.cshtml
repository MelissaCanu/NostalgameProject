@model Nostalgame.Models.AvatarViewModel

<h2>Delete Avatar</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Avatar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdGenere)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdGenere)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Foto" alt="@Model.Nome" width="100" height="100" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdAvatar" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
