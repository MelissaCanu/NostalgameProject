@model IEnumerable<Nostalgame.Models.Avatar>

<h1>Index</h1>

<p>
    <a asp-action="Create">Crea</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Genere.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Foto)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Genere.Nome)</td>
                <td><img src="@item.Foto" alt="@item.Nome" width="100" height="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAvatar">Modifica</a> |
                    <a asp-action="Details" asp-route-id="@item.IdAvatar">Dettagli</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdAvatar">Elimina</a>
                </td>
            </tr>
        }
    </tbody>
</table>
