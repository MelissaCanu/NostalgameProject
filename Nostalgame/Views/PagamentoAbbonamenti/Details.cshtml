@model Nostalgame.Models.PagamentoAbbonamento

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Dettagli Pagamento Abbonamento</h1>

<div class="container">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Dettagli del pagamento</h5>
        <p class="card-text">Qui trovi i dettagli del pagamento dell'abbonamento.</p>
        <hr />
        <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdAbbonamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdAbbonamento)
        </dd> <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Abbonamento.TipoAbbonamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Abbonamento.TipoAbbonamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImportoPagato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImportoPagato)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Utente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Utente.Id)
        </dd>
    </dl>
</div>
<div>
    </div>
    @if (User.IsInRole("Admin")) // Se l'utente è un amministratore
    {
        <a asp-action="Edit" class="btn btn-save" asp-route-id="@Model?.IdPagamentoAbbonamento">Modifica</a>
 
    }
    @if (User.IsInRole("Admin")) // Se l'utente è un amministratore
    {
        <a asp-action="Index" class="btn btn-back mt-3">Indietro</a>
    }
    else // Se l'utente non è un amministratore
    {
        <a asp-action="Index" asp-controller="Home" class="btn btn-back">Torna alla Home</a>
    }
</div>
