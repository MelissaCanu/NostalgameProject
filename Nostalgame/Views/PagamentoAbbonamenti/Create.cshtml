@model Nostalgame.Models.AbbonamentoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Pagamento dell'abbonamento</h1>

<div class="container">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Pagamento dell'abbonamento</h5>
        <p class="card-text">Inserisci i dettagli del tuo pagamento qui sotto.</p>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" id="payment-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdAbbonamentoAttuale" class="control-label"></label>
                <input asp-for="IdAbbonamentoAttuale" class="form-control" readonly />
            </div>



            <div class="form-group">
                <label asp-for="IdUtente" class="control-label"></label>
                <input asp-for="IdUtente" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DataPagamento" class="control-label"></label>
                <input asp-for="DataPagamento" class="form-control" id="DataPagamento" readonly/>
                <span asp-validation-for="DataPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImportoPagato" class="control-label"></label>
                <p>@Model.ImportoPagato</p>
                <input asp-for="ImportoPagato" type="hidden" id="ImportoPagato" /> 
                <input asp-for="CostoMensile" type="hidden" id="CostoMensile" /> 
                <span asp-validation-for="ImportoPagato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="card-element">
                    Carta di credito o debito
                </label>
                <div class="card bg-light mb-3">
                    <div id="card-element" class="card-body">
                        <!-- Un elemento Stripe per l'input della carta sarà inserito qui. -->
                    </div>
                </div>
                <!-- Usato per visualizzare gli errori dell'elemento carta. -->
                <div id="card-errors" role="alert"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Paga ora" class="btn btn-primary" />
            </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

<div>
    <a asp-action="Edit" asp-controller="Registrazioni" class="btn btn-back mt-3" asp-route-id="@ViewData["IdRegistrazione"]">Indietro</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://js.stripe.com/v3/"></script>
    <script src="~/js/pagamento.js"></script>
}

