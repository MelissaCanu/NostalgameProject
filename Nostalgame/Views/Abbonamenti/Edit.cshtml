@model Nostalgame.Models.Abbonamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Modifica abbonamento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAbbonamento" />
            <div class="form-group">
                <label asp-for="TipoAbbonamento" class="control-label"></label>
                <input asp-for="TipoAbbonamento" class="form-control" />
                <span asp-validation-for="TipoAbbonamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CostoMensile" class="control-label"></label>
                <input asp-for="CostoMensile" class="form-control" />
                <span asp-validation-for="CostoMensile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-back mt-3">Indietro</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
