@model IEnumerable<Nostalgame.Models.Abbonamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crea</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoAbbonamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostoMensile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoAbbonamento)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CostoMensile)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAbbonamento">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.IdAbbonamento">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAbbonamento">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
