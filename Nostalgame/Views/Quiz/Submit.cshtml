@model QuizViewModel

<form asp-action="Submit" method="post">
    <div class="container">
        <div class="row">
            <div class="col-12 my-2">
                @for (int i = 0; i < 10; i++)
                {
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Domanda @(i + 1)</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@GetQuestionText(i + 1)</p>
                            <div>
                                @for (int j = 0; j < 5; j++)
                                {
                                    <label class="radio-card">
                                        <input type="radio" asp-for="@Model.Domande[i]" value="@Model.Risposte[i * 5 + j]" /> @Model.Risposte[i * 5 + j]
                                    </label>
                                }
                            </div>
                        </div>
                    </div>
                }

                <button type="submit" class="btn btn-primary mt-3">Invia</button>
            </div>
        </div>
    </div>
</form>

<style>
    .radio-card {
        display: block;
        margin-bottom: 10px;
    }

    .card {
        margin-bottom: 20px;
    }
</style>

@functions {
    public string GetQuestionText(int questionNumber)
    {
        switch (questionNumber)
        {
            case 1:
                return "Preferisci giochi con un ritmo lento e rilassato o giochi adrenalinici e veloci?";
            case 2:
                return "Cosa ti piace di più in un videogioco?";
            case 3:
                return "Quale ambiente di gioco preferisci?";
            case 4:
                return "Cosa ti piace di più fare in un videogioco?";
            case 5:
                return "Quale tipo di trama preferisci?";
            case 6:
                return "Quale tipo di sfida preferisci?";
            case 7:
                return "Quale tipo di personaggio preferisci controllare?";
            case 8:
                return "Quale tipo di grafica preferisci?";
            case 9:
                return "Quale tipo di gameplay preferisci?";
            case 10:
                return "Quale tipo di atmosfera preferisci?";
            default:
                return "";
        }
    }
}
