@model IEnumerable<Nostalgame.Models.Genere>

@{
    ViewData["Title"] = "Index";
}

<h1>Generi</h1>

<p>
    <a asp-action="Create">Crea</a>
</p>

@foreach (var item in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
            <a asp-action="Edit" asp-route-id="@item.IdGenere" class="btn btn-primary">Modifica</a>
            <a asp-action="Details" asp-route-id="@item.IdGenere" class="btn btn-secondary">Dettagli</a>
            <a asp-action="Delete" asp-route-id="@item.IdGenere" class="btn btn-danger">Elimina</a>
        </div>
    </div>
}
