@model IEnumerable<Nostalgame.Models.Genere>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crea</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdGenere">Modifica</a> |
                <a asp-action="Details" asp-route-id="@item.IdGenere">Dettagli</a> |
                <a asp-action="Delete" asp-route-id="@item.IdGenere">Elimina</a>
            </td>
        </tr>
}
    </tbody>
</table>
